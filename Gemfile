source "https://rubygems.org"

# Jekyll 核心 - 使用与 GitHub Pages 兼容的版本
gem "jekyll", "~> 3.9.0"

# GitHub Pages 兼容
gem "github-pages", group: :jekyll_plugins

# 插件
gem "jekyll-feed", "~> 0.12"
gem "jekyll-seo-tag", "~> 2.8"
gem "jekyll-sitemap", "~> 1.4"
gem "jekyll-paginate", "~> 1.1"

# 主题支持
gem "jekyll-theme-minimal"

# Windows 兼容性 - 移除有问题的 wdm
platform :windows do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

# 代码高亮
gem "rouge", "~> 3.26"

# 标准库支持
gem "csv"
gem "webrick"